<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="org.eclipse.kura.example.ibeacon.IBeaconExample"
         name="iBeacon Example" 
         description="Simple iBeacon example.">
         
         <Icon resource="http://s3.amazonaws.com/kura-resources/application/icon/beacon.png" size="32"/>
         
        <AD id="enableAdvertising"
            name="enableAdvertising"
            type="Boolean"
            cardinality="0"
            required="true"
            default="false"
            description="Enable Beacon advertising."/>

         <AD id="minBeaconInterval"
            name="minBeaconInterval"
            type="Integer"
            cardinality="0"
            required="true"
            default="1000"
            description="Minimum time interval between beacons (milliseconds)."/>
            
        <AD id="maxBeaconInterval"
            name="maxBeaconInterval"
            type="Integer"
            cardinality="0"
            required="true"
            default="1000"
            description="Maximum time interval between beacons (milliseconds)."/>

        <AD id="uuid"
            name="uuid"
            type="String"
            cardinality="0"
            required="true"
            default="aaaaaaaa-bbbb-cccc-dddd-eeeeeeeeeeee"
            description="128-bit uuid for beacon advertising expressed as hex string."/>

        <AD id="major"  
            name="major"
            type="Integer"
            cardinality="0" 
            required="true"
            default="0" 
            description="Major value."/>

        <AD id="minor"  
            name="minor"
            type="Integer"
            cardinality="0" 
            required="true"
            default="0" 
            description="Minor value."/>

         <AD id="txPower"
            name="txPower"
            type="Integer"
            cardinality="0"
            required="true"
            default="0"
            description="Transmission power measured at 1m away from the beacon expressed in dBm."/>
            
        <AD id="iname"
            name="iname"
            type="String"
            cardinality="0"
            required="true"
            default="hci0"
            description="Name of bluetooth adapter."/>
                    
    </OCD>

    <Designate pid="org.eclipse.kura.example.ibeacon.IBeaconExample">
        <Object ocdref="org.eclipse.kura.example.ibeacon.IBeaconExample"/>
    </Designate>
</MetaData>
